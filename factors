#!/usr/bin/python3
import sys
import math

def factorize(n):
    for i in range(2, math.isqrt(n) + 1):
        if n % i == 0:
            # Ensuring the larger factor comes first in the output
            p, q = n // i, i
            return p, q
    return n, 1  # This case should never happen since n > 1

def main(file_path):
    with open(file_path, 'r') as file:
        numbers = file.readlines()

    for line in numbers:
        n = int(line.strip())
        p, q = factorize(n)
        print(f"{n}={p}*{q}")

if __name__ == "__main__":
    if len(sys.argv) != 2:
        print("Usage: factors <file>")
        sys.exit(1)
    
    file_path = sys.argv[1]
    main(file_path)
